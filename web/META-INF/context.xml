<?xml version="1.0" encoding="UTF-8"?>
<Context path="/banco-api">
    <Resource 
        name="jdbc/MySQLDS"   
        type="javax.sql.DataSource" 
        
        driverClassName="com.mysql.jdbc.Driver" 
        url="jdbc:mysql://localhost:3306/banco" 
        username="banco"
        password="banco"            
                         
        maxActive="5" 
        maxIdle="4" 
        maxWait="1" 
        validationQuery="SELECT 1 FROM dual"/>
    
</Context>